    {snappy, ".*",
     {git, "https://github.com/rcouch/couchdb-snappy",
      {branch, "master"}}},

    {lager, ".*",
     {git, "https://github.com/rcouch/couchdb-lager",
      {branch, "refuge"}}},

    {couch_collate,  ".*",
     {git, "https://github.com/rcouch/couchdb-couch-collate",
      {branch, "master"}}}
]}.
