%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ft=erlang ts=4 sw=4 et

%% options
{cover_enabled, true}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{edoc_opts, [{preprocess, true}]}.
{erl_opts, [debug_info, fail_on_warning]}.
{require_otp_vsn, "R15|R16|17"}.

%% libs
{deps_dir, ["src"]}.
{libs_dir, ["src/"]}.
{sub_dirs, ["support/couch_rel", "rel"]}.


{deps, [

        {couch, ".*",
         {git, "https://github.com/rcouch/rcouch-couch",
          "8556f209f3f4241c9da2ef34e72b48280e7416a2"}},

        {couch_mrview, ".*",
         {git, "https://github.com/rcouch/couchdb-couch-mrview",
          "083d0136986a6e77707081238c17d53787d3d9dc"}},

        {couch_httpd, ".*",
         {git, "https://github.com/rcouch/couchdb-couch-httpd",
          "9b250cbf51de0b41cb88742802d91c6d9ae1f42f"}},

        {couch_replicator, ".*",
         {git, "https://github.com/rcouch/couchdb-couch-replicator",
          "c0b8fef890bd4a4ebdd3ad863fe12a2c29d50e6c"}},

        {couch_dbupdates, ".*",
         {git, "https://github.com/rcouch/couchdb-couch-dbupdates",
          {branch, "1994-merge-rcouch"}}},

        {couch_randomdoc, ".*",
         {git, "https://github.com/rcouch/couch_randomdoc",
          {branch, "rcouch-0.1"}}},

        {geocouch, ".*",
         {git, "https://github.com/rcouch/geocouch",
          {branch, "rcouch"}}}
]}.

%% build hooks
{post_hooks, [{compile, "escript support/build_js.escript"}]}.
